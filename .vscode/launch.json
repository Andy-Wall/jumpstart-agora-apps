{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Contoso.Backend.Data",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/contoso_supermarket/developer/queue_monitoring/src/Contoso.Backend.Data/bin/Debug/net7.0/Contoso.Backend.Data.dll",
            "args": [],
            "cwd": "${workspaceFolder}/contoso_supermarket/developer/queue_monitoring/src/Contoso.Backend.Data",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger/index.html",
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:4000/"
            }
        },
        {
            "name": "Contoso.Frontend.Web",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/contoso_supermarket/developer/queue_monitoring/src/Contoso.Frontend.Web/",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "run-script",
                "start"
            ],
            "env": {
                "BACKEND_API_URL": "https://localhost:4000/"
            }
        },
        {
            "name": "pos",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "${workspaceFolder}/contoso_supermarket/developer/pos/src/app.py",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload",
                "--debug"
            ],
            "serverReadyAction":{
                "pattern": "Running on http://127.0.0.1:([0-9]+)",
                "uriFormat": "http://127.0.0.1:%s",
                "action": "openExternally"
            },
            "jinja": true,
            "justMyCode": true
        }
    ],
    "compounds": [
        {
            "name": "AllProjects",
            "configurations": ["Contoso.Frontend.Web", "Contoso.Backend.Data", "pos"]
        }
    ]
}